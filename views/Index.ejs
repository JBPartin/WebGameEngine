<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WebGameEngine</title>
    <link rel="stylesheet" href="styles/engine.css" />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.15.3/css/all.css"
      integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk"
      crossorigin="anonymous"
    />
    <script
      src="https://kit.fontawesome.com/c9cfff2134.js"
      crossorigin="anonymous"
    ></script>
    <script src="scripts/vendor/gl-matrix-min.js"></script>
  </head>

  <body>
    <nav>
      <h1 id="logo">GAME ENGINE</h1>
      <div id="nav-links">
        <h2 class="nav-link">Forum</h2>
        <h2 class="nav-link">Games</h2>
        <h2 class="nav-link">Account</h2>
      </div>
    </nav>
    <section id="engine">
      <button id="play-button" class="play"></button>
      <button id="stop-button" class="stop isPlaying"></button>
      <div id="fps">0</div>
      <div id="propertywindow" class="window">
        <div class="tab-top tabs-active">
          <h1>ELEMENTS</h1>
        </div>
        <p class="tab-bottom"></p>
        <div id="sceneelements" class="scrollbar"></div>
      </div>
      <div id="gameviewerwindow" class="window">
        <div class="tab-top tabs-active">
          <h1>SCENE</h1>
        </div>
        <p class="tab-bottom"></p>
        <canvas id="gameviewer" tabindex="0"></canvas>
        <div id="fileviewer" class="window">
          <div class="tabs">
            <div class="tab-top tabs-active">
              <h1>FILES</h1>
            </div>
            <div class="tab-top">
              <h1>CONSOLE</h1>
            </div>
          </div>
          <p class="tab-bottom"></p>
          <div id="files">
            <input type="file" name="filechoice" multiple="multiple" />
            <% for(var i=0; i < supplies.length; i++) {%> <%-
            include('./partials/folder.ejs', {supplies, i}) %> <% } %>
          </div>
        </div>
      </div>
      <div id="propertyinfowindow">
        <div class="tab-top tabs-active">
          <h1>INFORMATION</h1>
        </div>
        <p class="tab-bottom"></p>
        <div id="info"></div>
      </div>
    </section>
    <menu id="ctxMenu">
      <menu title="Create">
        <menu title="Object"></menu>
        <menu title="Camera"></menu>
        <menu title="Light"></menu>
      </menu>
    </menu>
    <menu id="ctxMenu2">
      <menu title="Delete"></menu>
      <menu title="Rename"></menu>
    </menu>
    <input type="text" class="rename-input" id="rename" />
    <script src="scripts/ecs.js"></script>
    <script src="scripts/scene.js"></script>
    <script src="scripts/utils.js"></script>
    <script src="scripts/events.js"></script>
  </body>
</html>
